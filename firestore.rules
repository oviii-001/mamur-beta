rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Messages collection
    match /messages/{message} {
      // Allow anyone to write (send anonymous messages)
      // Rate limiting should be handled by client-side code
      allow create: if request.resource.data.message is string
                    && request.resource.data.message.size() >= 1
                    && request.resource.data.message.size() <= 1000
                    && request.resource.data.timestamp == request.time
                    && request.resource.data.messageLength is int
                    && request.resource.data.createdAt is string;
      
      // No updates or deletes from anonymous users
      allow update, delete: if false;
      
      // Allow authenticated users to read (admin only)
      // For public inbox access, change to: allow read: if true;
      allow read: if request.auth != null;
    }
  }
}
